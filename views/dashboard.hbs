<div class=" text-center justify-content-center p-5 m-3">
    {{#if frutas}}
    <div class="row row-cols-3">
        {{#each arrfrutas}}
        <div class="col-4 card m-2 " style="width: 18rem;">
            <img src="/static/images/{{this.nombre}}.png" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.nombre}}</h5>
                <a href="/{{this.nombre}}" class="btn btn-primary"><i class="bi bi-cart3"></i> Comprar</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>